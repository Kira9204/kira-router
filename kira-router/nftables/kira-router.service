[Unit]
Description=Kira-router nftables generation script
Requires=network-online.target
After=network-online.target

[Service]
User=root
Type=oneshot
RemainAfterExit=yes
WorkingDirectory=/root/kira-router/nftables
ExecStart=/root/kira-router/nftables/start.sh
ExecStop=/root/kira-router/nftables/stop.sh
ExecReload=/root/kira-router/nftables/start.sh

[Install]
WantedBy=multi-user.target
